{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compile C++ file with g++ without debug symbols"
        },
        {
            "type": "shell",
            "label": "Build and Run C++",
            "command": "/usr/bin/g++ -fcolor-diagnostics -fansi-escape-codes '${file}' -o '${fileDirname}/${fileBasenameNoExtension}.exe' && '${fileDirname}/${fileBasenameNoExtension}.exe'",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compile and run C++ file automatically"
        }
    ],
    "version": "2.0.0"
}